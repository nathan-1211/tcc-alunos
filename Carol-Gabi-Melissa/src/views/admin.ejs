<!DOCTYPE html>
<html lang="pt-br">
  <%- include('components/head') %>
  <body>
    <main>
      <%- include('components/header-main') %>
      <div class="form-admin">
        <form action="/" method="POST" class="form form-login">
          <h1>Admin <br />Sala de Leitura</h1>
          <div class="content-msg">
            <% if(msgError) { %>
            <div class="msgError"><%= msgError %></div>
            <% } %> <% if(msgSuccess) { %>
            <div class="msgSuccess"><%= msgSuccess %></div>
            <% } %>
          </div>
          <div class="form-group">
            <div class="input">
              <input
                type="text"
                name="admin_email"
                class="admin-login"
                id="admin-login"
                placeholder=""
              />
              <label for="admin-login">Admin User Login</label>
            </div>
            <div class="input">
              <input
                type="password"
                name="admin_password"
                class="admin-password"
                id="admin-password"
                placeholder=""
              />
              <label for="admin-password">Admin User Password</label>
            </div>
            <div class="btn-group">
              <div class="btn">
                <button>Login</button>
              </div>
            </div>
          </div>
        </form>
      </div>
      <%- include('components/script') %>
    </main>
  </body>
</html>
